# Shows top used commands
alias history-stat="fc -ln 0 | awk '{print \$1}' | sort | uniq -c | sort -nr | head"

# Allows leaving from deleted directories
alias ..='command .. || cd $(dirname $PWD)'

# Access zsh config files
alias zshconf='${=EDITOR} ~/.zplugin/user/aliases ~/.zplugin/user/functions ~/.zplugin/user/variables ~/.zshrc &!'

alias "zshconfatom"='atom ~/.zplugin/user/aliases ~/.zplugin/user/functions ~/.zplugin/user/variables ~/.zshrc &!'

# dot file management
alias dots=' /usr/bin/git --git-dir=$HOME/.dots/ --work-tree=$HOME'
#           ^Space added to remove this command from history

# Aesthetic function for Dolphin, clear -x if cd while in Dolphin
$isdolphin && alias cd='clear -x; cd'

alias rm='rm -I'
alias ls='lsd'
alias apt="apt-fast"
alias open='xdg-open'

unalias zplg

if [[ -n $SSH_CONNECTION ]]; then
    alias ls="lsd --group-dirs first --icon never"
fi
