# Format: <BORDER|GESTURE|TAP> <DIRECTION:N,S,E,W,X> <NUM_FINGER>

# Default bring up onboard keyboard
BORDER S 1
    ./Scripts/tabletmode/touchgestures b down 1

BORDER N 1
    ./Scripts/tabletmode/touchgestures b up 1

BORDER E 1
    ./Scripts/tabletmode/touchgestures b left 1
    
BORDER W 1
    ./Scripts/tabletmode/touchgestures b right 1

    
# left and right are swapped
MOVEMENT N 2
    ./Scripts/tabletmode/touchgestures m up 2

MOVEMENT S 2
    ./Scripts/tabletmode/touchgestures m down 2

# Default alt right page
MOVEMENT E 2
    ./Scripts/tabletmode/touchgestures m left 2

# Default alt left page
MOVEMENT W 2
    ./Scripts/tabletmode/touchgestures m right 2

    
# Default Expose view
MOVEMENT N 3
    ./Scripts/tabletmode/touchgestures m up 3

# Default minimize window
MOVEMENT S 3
    ./Scripts/tabletmode/touchgestures m down 3

MOVEMENT E 3
    ./Scripts/tabletmode/touchgestures m left 3

MOVEMENT W 3
    ./Scripts/tabletmode/touchgestures m right 3


    
MOVEMENT N 4
    ./Scripts/tabletmode/touchgestures m up 4
    
# Default minimize all
MOVEMENT S 4
    ./Scripts/tabletmode/touchgestures m down 4

MOVEMENT E 4
    ./Scripts/tabletmode/touchgestures m left 4

MOVEMENT W 4
    ./Scripts/tabletmode/touchgestures m right 4

TAP X 2
    xdotool click 3
